<div>
  <h3>
    <span class="lead font-italic" id="funQuote"></span>
  </h3>
  <h3 id="author"></h3>
  {{!-- job form section --}}
  <section>
    <div class="d-flex align-items-center flex-column ">
      <div class="card w-75 ">
        <div id="jobProspect" class="card-header mb-3">
          Job Prospect
        </div>
        <div class="form-floating mb-3">
          <input type="input" class="form-control" id="companyName">
          <label>Company Name (Required) </label>
        </div>
        <div class="form-floating mb-3">
          <input type="input" class="form-control" id="positionTitle">
          <label>Position Title (Required) </label>
        </div>
        <div class="form-floating mb-3">
          <input type="input" class="form-control" id="jobLink">
          <label>Job Posting URL (Required) </label>
        </div>
        <div class="form-floating mb-3">
          <label for="customRange3" class="form-label text-muted">Salary Range: <output id="rangeVal"
              class="fontSizing text-muted">$50000</output></label>
          <br>
          <br>
          <input type="range" class="form-range" min="10000" max="500000" value="50000" step="10000" id="salary"
            oninput="rangValfunc(this.value)">
        </div>
        <button type="submit" class="btn btn-primary" id="createBtn">Create Job Card</button>
      </div>
    </div>
  </section>
</div>

<script src="/assets/js/jobForm.js"></script>
